{
  "compilerOptions": {
    "outDir": "./types/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es2015",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  },
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": true,
  "noImplicitAny": false,
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./dist/**/*",
    "./build/**/*",
    "./node_modules/**/*",
  ],
  "types": [
    "jquery"
  ]
}